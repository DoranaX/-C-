<Window x:Class="WpfApp22.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Массив" Height="446" Width="608">
    <Grid>
        <StackPanel VerticalAlignment="Top" Margin="10">
            <TextBlock Text="Введите двумерный массив (числа, разделенные пробелами и строки, разделенные переводами строки):"/>
            <TextBox x:Name="InputTextBox" TextWrapping="Wrap" AcceptsReturn="True" Width="450" Height="150"/>
            <Button Content="Сортировать" Click="SortButton_Click" Width="100" Height="30" Margin="0 10 0 0"/>
            <TextBlock Text="Результат сортировки:" Margin="0 10 0 0"/>
            <TextBox x:Name="OutputTextBox" TextWrapping="Wrap" AcceptsReturn="True" Width="450" Height="150"/>
        </StackPanel>
    </Grid>
</Window>